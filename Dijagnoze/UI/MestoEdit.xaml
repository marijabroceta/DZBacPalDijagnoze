<Window x:Class="Dijagnoze.UI.MestoEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dijagnoze.UI"
        mc:Ignorable="d"
        Title="MestoEdit" Height="150" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Mesto" Width="80" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
        <TextBox Grid.Row="0" Name="tbMesto" VerticalAlignment="Center" HorizontalAlignment="Right" Height="30" Width="380" Margin="0,0,10,0" Text="{Binding Path=MestoStanovanja}" />
        <Button Grid.Row="1" Content="Sacuvaj" HorizontalAlignment="Right" VerticalAlignment="Center" Height="30" Width="70" Margin="0,0,100,0" Click="btnSacuvaj_Click"/>
        <Button Grid.Row="1" Content="Izadji" HorizontalAlignment="Right" VerticalAlignment="Center" Height="30" Width="70" Margin="0,0,10,0" Click="btnIzadji_Click"/>
    </Grid>
</Window>
